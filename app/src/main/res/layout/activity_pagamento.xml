<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_bege">

    <include
        android:id="@+id/header"
        layout="@layout/layout_header"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text_titulo_pagamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pagamento"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <RadioGroup
        android:id="@+id/radioGroup_formas_pagamento"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/text_titulo_pagamento"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RadioButton
            android:id="@+id/radio_cartao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cartão de Crédito/Débito" />

        <RadioButton
            android:id="@+id/radio_dinheiro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dinheiro" />

        <RadioButton
            android:id="@+id/radio_pix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pix" />
    </RadioGroup>

    <TextView
        android:id="@+id/text_view_endereco_selecionado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Endereço: ainda não selecionado"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="16sp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/radioGroup_formas_pagamento"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/text_view_subtotal_summary_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Subtotal: R$ 0,00"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/text_view_endereco_selecionado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="viewStart" />

    <TextView
        android:id="@+id/text_view_delivery_fee_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Entrega: R$ 10,00"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        android:paddingHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/text_view_subtotal_summary_value"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="viewStart" />

    <TextView
        android:id="@+id/text_view_total_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Total: R$ 0,00"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/text_view_delivery_fee_value"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="viewStart" />


    <Button
        android:id="@+id/button_finalizar_pedido"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Finalizar Pedido"
        android:backgroundTint="@color/green"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/text_view_total_value"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <include
        android:id="@+id/footerNavigation"
        layout="@layout/layout_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
