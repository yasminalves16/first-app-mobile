<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="5dp"
        android:gravity="center_vertical">


        <ImageView
            android:id="@+id/imagem_prato"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/card_risoto"
            android:contentDescription="Imagem do prato" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:id="@+id/titulo_prato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Título do Prato"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#000000" />


            <TextView
                android:id="@+id/descricao_prato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Descrição do prato"
                android:textSize="15sp"
                android:textColor="#666666" />


            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/preco_prato"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R$ 00,00"
                    android:textStyle="bold"
                    android:textColor="@color/orange"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tempo_preparo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="⏱ 00 min"
                    android:layout_marginStart="10dp"
                    android:textSize="17sp"
                    android:textColor="#888888" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >


            <TextView
                android:id="@+id/status_disponivel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disponível"
                android:textSize="14sp"
                android:textColor="#228B22"
                android:background="#E0FFE0"
                android:padding="10dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />


            <TextView
                android:id="@+id/texto_ver_mais"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ Ver mais"
                android:textColor="@color/orange"
                android:textSize="14sp"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true" />


            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Base -->
            <Button
                android:id="@+id/botao_add"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:backgroundTint="@color/orange"
                android:text="+ ADD"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>



    </LinearLayout>
</androidx.cardview.widget.CardView>
